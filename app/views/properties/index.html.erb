<h3>Properties for <strong><%= @agency.title %></strong></h3>
<div class="well main">
  <% if @properties.blank? %>
    <span class = "text-danger">No properties found!</span>
  <% else %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>City</th>
          <th>Address</th>
          <th>Property Type</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @properties.each do |p| %>
          <tr>
            <td>
              <%= link_to(p.title, agency_property_path(@agency.id, p.id)) %>
            </td>
            <td>
              <%= p.city %>
            </td>
            <td>
              <%= p.address %>
            </td>
            <td>
              <%= p.property_type %>
            </td>
            <td>
              <%= p.price %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @agencies, renderer: BootstrapPagination::Rails %>
  <% end %>
</div>
